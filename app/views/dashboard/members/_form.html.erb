<%= form_for [:dashboard, @member] do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.collection_radio_buttons :gender, Member.genders.map{|key, value| ["#{key}".capitalize, key]}, :last, :first %>
  </div>

  <div class="actions">
    <%= f.submit t(".create_user") %>
  </div>
<% end %>
