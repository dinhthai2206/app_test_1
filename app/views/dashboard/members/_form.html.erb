<%= form_for [:dashboard, @member] do |f| %>
  <%= render "shared/error_messages", object: @member %>

  <div class="form-group">
    <p><%= f.label :name %></p>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <p><%= f.label :email %></p>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :gender %>
    <div class="form-check-label">
      <%= f.collection_radio_buttons :gender, Member.genders.map{|key, value| ["#{key}".capitalize, key]}, :last, :first do |b| %>
        <%= b.radio_button %>
        <%= b.label %>
      <% end %>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit t(".create_user"), class: "btn btn-secondary" %>
  </div>
<% end %>
