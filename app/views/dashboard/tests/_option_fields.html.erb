<div class="nested-fields">
  <div class="form-inline">
    <div class="form-group mb-2"><%= f.label :content %></div>
    <div class="form-group mx-sm-3 mb-2"><%= f.text_field :content, class:"form-control" %></div>
    <%= link_to_remove_association t(".remove_option"), f %>
  </div>
  <div class="form-group">
    <%= f.label :correct %> 
    <%= f.collection_radio_buttons :correct, Option.corrects.map{|key, value| ["#{key}".capitalize, key]}, :last, :first , class: "form-check-input" do |b| %>
      <%= b.radio_button %>  <%= b.label %>
    <% end %>
  </div>
</div>
