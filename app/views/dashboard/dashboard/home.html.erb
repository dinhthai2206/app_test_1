<div class="card-deck">
  <div class="card">
    <div class="card-header"><h3>Members</h3></div>
    <div class="card-body">
      <h5 class="card-title"><%= Member.count %> members</h5>
      <p class="card-text"><%= Member.male.count %> males</p>
      <p class="card-text"><%= Member.female.count %> females</p>
    </div>
    <div class="card-footer text-center">
      <small class="text-muted"><%= link_to "Detail", dashboard_members_path, class:"btn btn-primary"%></small>
    </div>
  </div>
  <div class="card">
    <div class="card-header"><h3>Tests</h3></div>
    <div class="card-body">
      <h5 class="card-title"><%= Test.count %> tests</h5>
      <p class="card-text"><%= Test.publish.count %> published tests</p>
      <p class="card-text"><%= Test.draff.count %> draff tests</p>
    </div>
    <div class="card-footer text-center">
      <small class="text-muted"><%= link_to "Detail", dashboard_tests_path, class:"btn btn-primary"%></small>
    </div>
  </div>
  <div class="card">
    <div class="card-header"><h3>Categories</h3></div>
    <div class="card-body">
      <h5 class="card-title"><%= Category.count %> categories</h5>
    </div>
    <div class="card-footer text-center">
      <small class="text-muted"><%= link_to "Detail", dashboard_categories_path, class:"btn btn-primary"%></small>
    </div>
  </div>
</div>
