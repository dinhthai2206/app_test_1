<tr id="category-<%= category.id %>">
  <td><%= category.title %></td>
  <td><%= category.tests.count %></td>
  <td><%= link_to t(".show"), dashboard_category_path(category), class: "btn btn-primary" %></td>
  <td><%= link_to t(".edit"), edit_dashboard_category_path(category), class: "btn btn-success" %></td>
  <td>
    <%= link_to t(".delete"), dashboard_category_path(category), remote: true, method: :delete, 
    data:{confirm: t(".confirm")}, class: "btn btn-danger" %>
  </td>
</tr>
